<% content_for :body_classes, "users sign_in" %>

<section class="sign_in__container">

  <main class="sign_in__main">
    <h1>Logga in</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { :class => "form--user"}) do |f| %>
      <div class="field">
        <%= f.label :email, "E-post" %>
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password, "Lösenord" %>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field field--checkbox">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "Kom ihåg mig" %>
        </div>
      <% end -%>

      <div class="actions actions--half">
        <%= f.submit "Logga in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </main>

</section>
