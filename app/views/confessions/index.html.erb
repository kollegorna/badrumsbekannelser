<p id="notice"><%= notice %></p>

<h1>Listing Confessions</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Body</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @confessions.each do |confession| %>
      <tr>
        <td><%= confession.user.name %></td>
        <td><%= simple_format confession.body %></td>
        <td>
          <%= link_to 'Show', confession_path(confession) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Confession', new_confession_path %>
